<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txt_giden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/giden"
        android:padding="10dp"
        android:text="Merhaba!"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/img_giden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giden_isim" />

    <TextView
        android:id="@+id/txt_gelen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner"
        android:padding="10dp"
        android:text="Selam"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_gelen"
        app:layout_constraintTop_toBottomOf="@+id/gelen_isim" />

    <TextView
        android:id="@+id/gelen_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Adsoyad"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/img_gelen"
        app:layout_constraintTop_toTopOf="parent" />


    <com.pkmmte.view.CircularImageView
        android:id="@+id/img_gelen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:border="true"
        app:border_color="@color/colorPrimaryDark"
        app:border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.pkmmte.view.CircularImageView
        android:id="@+id/img_giden"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:border="true"
        app:border_color="@color/colorPrimaryDark"
        app:border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gelen_zaman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="11:18"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_gelen"
        app:layout_constraintStart_toStartOf="@+id/img_gelen"
        app:layout_constraintTop_toBottomOf="@+id/img_gelen" />

    <TextView
        android:id="@+id/giden_zaman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="11:18"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_giden"
        app:layout_constraintStart_toStartOf="@+id/img_giden"
        app:layout_constraintTop_toBottomOf="@+id/img_giden" />

    <TextView
        android:id="@+id/giden_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Adsoyad"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/img_giden"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_gelen_resim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/img_gelen"
        app:layout_constraintTop_toBottomOf="@+id/gelen_isim" />

    <ImageView
        android:id="@+id/img_giden_resim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/img_giden"
        app:layout_constraintTop_toBottomOf="@+id/giden_isim" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/custom_sohbet_baslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:text="Konuşma adı"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/custom_sohbet_tarih"
        app:layout_constraintStart_toEndOf="@+id/custom_sohbet_img"
        app:layout_constraintTop_toTopOf="@+id/custom_sohbet_img" />

    <TextView
        android:id="@+id/custom_sohbet_icerik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Konuşma son mesajı"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/custom_sohbet_img"
        app:layout_constraintTop_toBottomOf="@+id/custom_sohbet_baslik" />

    <TextView
        android:id="@+id/custom_sohbet_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="11:10"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/custom_sohbet_img" />



    <com.pkmmte.view.CircularImageView
        android:id="@+id/custom_sohbet_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:border="true"
        app:border_color="@color/colorPrimaryDark"
        app:border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>